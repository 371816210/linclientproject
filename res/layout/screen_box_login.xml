<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tv_login_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="307.0dip"
        android:layout_height="146.0dip"
        android:layout_marginTop="80.0dip"
        android:background="@drawable/ic_wo_link_logo"
        android:contentDescription="@string/app_name" />

    <EditText
        style="@style/BasicEdittextStyle"
        android:id="@+id/edit_username"
        android:layout_width="452.0dip"
        android:layout_height="55.0dip"
        android:background="@drawable/ic_login_input_bg"
        android:ellipsize="middle"
        android:hint="@string/hint_username"
        android:singleLine="true"
        android:textSize="22sp" />

    <EditText
        style="@style/BasicEdittextStyle"
        android:id="@+id/edit_password"
        android:layout_width="452.0dip"
        android:layout_height="55.0dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/ic_login_input_bg"
        android:ellipsize="middle"
        android:hint="@string/hint_password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="22sp" />

    <EditText
        style="@style/BasicEdittextStyle"
        android:id="@+id/edit_checkpassword"
        android:layout_width="452.0dip"
        android:layout_height="55.0dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/ic_login_input_bg"
        android:ellipsize="middle"
        android:hint="@string/hint_checkpassword"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="452.0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <CheckBox
            style="@style/CustomCheckboxTheme"
            android:id="@+id/chk_msginfo"
            android:layout_width="21.0dip"
            android:layout_height="22.0dip"
            android:layout_marginLeft="10.0dip"
            android:checked="true" />

        <TextView
            android:id="@+id/txt_msginfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hint_lawcopyright"
            android:textColor="@color/black" />
    </LinearLayout>

    <Button
        android:layout_width="452.0dip"
        android:id="@+id/btnsubmit"
        android:layout_height="55.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/ic_submit"
        android:gravity="center"
        android:text="@string/string_btn_reg"
        android:textColor="@color/black"
        android:textSize="22sp" />

</LinearLayout>